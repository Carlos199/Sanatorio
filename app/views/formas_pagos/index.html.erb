<p id="notice"><%= notice %></p>

<h1>Formas Pagos</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formas_pagos.each do |formas_pago| %>
      <tr>
        <td><%= formas_pago.descripcion %></td>
        <td><%= link_to 'Show', formas_pago %></td>
        <td><%= link_to 'Edit', edit_formas_pago_path(formas_pago) %></td>
        <td><%= link_to 'Destroy', formas_pago, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

