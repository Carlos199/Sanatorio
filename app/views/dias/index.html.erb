<p id="notice"><%= notice %></p>

<h1>Dias</h1>
<%= form_tag dias_path, method: :get do %>

 <%= text_field_tag :query, params[:query], class: 'form-control typeahead', id:"dia_search" %>
  <%= submit_tag 'Search' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dias.each do |dia| %>
      <tr>
        <td><%= dia.codigo %></td>
        <td><%= dia.nombre %></td>
        <td><%= link_to 'Show', dia %></td>
        <td><%= link_to 'Edit', edit_dia_path(dia) %></td>
        <td><%= link_to 'Destroy', dia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dia', new_dia_path %>
