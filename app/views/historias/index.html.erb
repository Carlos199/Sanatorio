<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">HISTORIAL</div>
  <div class="panel-body">
  <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
      <p>
        <%= button_to new_historia_path, {method: :get, class: "btn btn-success"} do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nuevo Registro Historial
        <% end %>
      </p>
    </div>
</div>

<div class="table-responsive">
 <table class="table table-condensed">
  <thead>
    <tr>
     <th></th>
      <th>Codigo</th>
       <th>Nombre</th>
        <th>Apellido</th>
      <th>Diagnostico</th>
      <th>Indicaciones</th>
      <th>Fecha proxima cita</th>
      <th>Recomendaciones</th>
      <th>Reserva</th>
      <th>Estudios</th>
      <th>Resultestudios</th>
      <th>Precio</th>
      <th>Descuento</th>
      <th>Total</th>
       <th>Fecha Creacion</th>
        <th>Fecha Modificacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @historias.each do |historia| %>
      <tr>
      <td>
          <%= button_to historia_path(historia), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
        <td><%= historia.codigo %></td>
        <td><%= historia.reserva.paciente.nombre %></td><td><%= historia.reserva.paciente.apellido %></td>
        <td><%= historia.diagnostico %></td>
        <td><%= historia.indicaciones %></td>
        <td><%= historia.fecha_proxima_cita %></td>
        <td><%= historia.recomendaciones %></td>
        <td><%= historia.reserva.nro %></td>
        <td><%= historia.estudios %></td>
        <td><%= historia.resultestudios %></td>
        <td><%= historia.precio %></td>
        <td><%= historia.descuento %></td>
        <td><%= historia.total %></td>
         <td><%= historia.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= historia.updated_at.strftime("%d/%m/%Y") %></td>
       
        
        <td> <%= button_to edit_historia_path(historia), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %></td>
       <td>
          <%= button_to historia, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
 
</table>

 </div>

