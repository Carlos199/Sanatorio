<p id="notice"><%= notice %></p>

<h1>Regiones</h1>

    
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regiones.each do |regione| %>
      <tr>
        <td><%= regione.nombre %></td>
        <td><%= link_to 'VER', regione %></td>
        <td><%= link_to 'EDITAR', edit_regione_path(regione) %></td>
        <td><%= link_to 'ELIMINAR', regione, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Regione', new_regione_path, class: "btn btn-primary" %>
