<p id="notice"><%= notice %></p>

<h1>Horarios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Medico</th>
      <th>Dia</th>
      <th>Horario de Atencion Desde</th>
      <th>Horario de Atencion Hasta</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horarios.each do |horario| %>
      <tr>
        <td><%= horario.codigo %></td>
        <td><%= horario.medico %></td>
        <td><%= horario.dia %></td>
        <td><%= horario.horadesde %></td>
        <td><%= horario.horahasta %></td>
        <td><%= horario.fecha %></td>
        <td><%= link_to 'Ver', horario %></td>
        <td><%= link_to 'Editar', edit_horario_path(horario) %></td>
        <td><%= link_to 'Eliminar', horario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

 <%= link_to  new_horario_path, remote: true, class: "btn btn-primary" do %>
     
   <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nueva 
    <% end %>
    
