<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">Horarios</div>
  <div class="panel-body">
<table class="table">
 <thead>
  
  <tr>
   <tr>
      <th></th>
      <th>Codigo</th>
      <th>Medico</th>
      <th>Especialidad</th>
      <th>Dia</th>
      <th>Horadesde</th>
      <th>Horahasta</th>
   <th>Fecha de Alta</th>
   <th>Fecha de Modificación</th>
   <th colspan="2"></th>
  </tr>
 
 </thead>

 <tbody>
  <div id="Horarios">
    <% @horarios.each do |horario| %>
    <tr>
    <td>
          <%= button_to horario_path(horario), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
      <td><%= horario.codigo %></td>
        <td><%= horario.medico.completo %></td>
        <td><%= horario.medico.especialidade.descripcion %></td>
        <td><%= horario.dia.nombre %></td>
        <td><%= horario.horadesde.strftime("%R") %></td>
        <td><%= horario.horahasta.strftime("%R") %></td>
        <td><%= horario.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= horario.updated_at.strftime("%d/%m/%Y") %></td>
     <td> <%= link_to edit_horario_path(horario), remote: true, class: "btn btn-info" do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %> </td>
     
    
     <td>
      <%= button_to horario, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
 
</table>
 <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>