<% if @horario.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody tr#<%= @horario.id %>').replaceWith(' <%= j render "row", horario: @horario %>');
  $('.alert-success').html("Horario ha sido modificado con Ã©xito").show();
  $('#horario-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @horario.errors.full_messages[0] %>');
<% end %>