<div id="departamento-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
<%= form_for @horario, remote: true do |form| %>
  <% if @horario.errors.any? %>
<% end %>
 <div class="modal-body">
  <div class="form-group row">
  <div class="col-xs-3">
    <%= form.label :codigo %>
     </div>
 <div class="col-xs-5">
    <%= form.text_field :codigo, autofocus: true, placeholder: "", class: "form-control" %>
 
 </div>
  </div>
   <div class="form-group row">
   <div class="col-xs-2">
  <%= form.label :Medico_id %>
  </div>
 <div class="col-xs-6">
     <%= form.collection_select :medico_id, Medico.all, :id, :completo, 
                  {selected: @horario.medico_id, include_blank: 'Seleccione medico'},
                  {class: "form-control"} %>
     
    </div>
       </div>
       
<div class="form-group row">
<div class="col-xs-2">
  <%= form.label :Dia_id %>
   </div>
 <div class="col-xs-6">
     <%= form.collection_select :dia_id, Dia.all, :id, :nombre, 
                  {selected: @horario.dia_id, include_blank: 'Seleccione dia'},
                  {class: "form-control"} %>
     
    </div>
    </div>

     <div class="field">
    <%= form.label :horadesde %>
    <%= form.time_select :horadesde, id: :horario_horadesde %>
  </div>

  <div class="field">
    <%= form.label :horahasta %>
    <%= form.time_select :horahasta, id: :horario_horahasta %>
  </div>

<div class="form-group row">
  <div class="col-xs-10">
   <div class="col-xs-7">
    </div>
   <%= form.submit "Aceptar", class: "btn btn-success" %>
   <%= link_to 'Cancelar', horarios_path, class: "btn btn-success" %>
   </div>
    </div>
<% end %>
 </div>
  </div>
</div>
</div>
