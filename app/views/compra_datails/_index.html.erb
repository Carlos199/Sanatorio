<% @compra.compra_details.each do |detail| %>
	<tr>
		<td><%= detail.number %></td>
		<td><%= detail.insumo.descripcion %></td>
		<td class="text-right"><%= detail.qty %></td>
		<td class="text-right"><%= number_to_currency(detail.price) %></td>
		<td class="text-right"><%= number_to_currency(detail.subtotal) %></td>
		<% if show_actions %>
			<td><%= link_to "Eliminar", compra_compra_detail_path(detail.compra.id, detail.id), method: :delete, remote: true, class: "btn btn-danger" %> </td>
		<% end %>
	</tr>
<% end %>