<p id="notice"><%= notice %></p>

<h1>Horarios</h1>
 <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
   <p>
<%= link_to 'Reservas', new_reserva_path, class: "btn btn-primary" %>
     </p>
     </div>
<table class="table">
  <thead class="table">
    <tr>
      <th>Codigo</th>
      <th>Medico</th>
      <th>Especialidad</th>
      <th>Dia</th>
      <th>Horadesde</th>
      <th>Horahasta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horarios.each do |horario| %>
      <tr>
        <td><%= horario.codigo %></td>
        <td><%= horario.medico.completo %></td>
        <td><%= horario.medico.especialidade.descripcion %></td>
        <td><%= horario.dia.nombre %></td>
        <td><%= horario.horadesde.strftime("%R") %></td>
        <td><%= horario.horahasta.strftime("%R") %></td>
        <td><%= link_to 'Show', horario %></td>
        <td><%= link_to 'Edit', edit_horario_path(horario) %></td>
        <td><%= link_to 'Destroy', horario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

