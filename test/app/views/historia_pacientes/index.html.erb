<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">HISTORIAL</div>
  <div class="panel-body">
  <div class="col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
      <p>
        <%= button_to new_historia_paciente_path, {method: :get, class: "btn btn-success"} do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span> Nuevo Registro Historial
        <% end %>
      </p>
    </div>
</div>

<div class="table-responsive">
 <table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Paciente</th>
      <th>Diagnostico</th>
      <th>Indicaciones</th>
      <th>Fecha proxima cita</th>
      <th>Recomendaciones</th>
     
      <th>Fecha Creacion</th>
        <th>Fecha Modificacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @historia_pacientes.each do |historia_paciente| %>
      <tr>
       <td>
          <%= button_to historia_paciente_path(historia_paciente), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
        <td><%= historia_paciente.reserva.paciente.completo %></td>
        <td><%= historia_paciente.diagnostico %></td>
        <td><%= historia_paciente.indicaciones %></td>
        <td><%= historia_paciente.fecha_proxima_cita %></td>
        <td><%= historia_paciente.recomendaciones %></td>
       
        <td><%= historia_paciente.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= historia_paciente.updated_at.strftime("%d/%m/%Y") %></td>
       
        
        <td> <%= button_to edit_historia_paciente_path(historia_paciente), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %></td>
       <td>
          <%= button_to historia_paciente, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
 
</table>

 </div>

