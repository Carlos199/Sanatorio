<div class="container-fluid">
  <div class="panel panel-default">
  <div class="panel-heading">Insumos</div>
  <div class="panel-body">
<table class="table">
 <thead>
  
  <tr>
   <th></th>
   <th>Codigo</th>
    <th>Nombre</th>
   <th>Descripcion</th>
      <th>Precio compra</th>
      <th>Precio venta</th>
      <th>Stock</th>
      <th>Stock minimo</th>
      <th>Unidades medida</th>
      <th>Proveedores</th>
      <th>Tipo iva</th>
   <th>Fecha de Alta</th>
   <th>Fecha de Modificación</th>
   <th colspan="2"></th>
  </tr>
 
 </thead>

 <tbody>
  <div id="Insumos">
   <% @insumos.each do |insumo| %>
    <tr>
    <td>
          <%= button_to insumo_path(insumo), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
         <td><%= insumo.codigo %></td>
         <td><%= insumo.nombre %></td>
        <td><%= insumo.descripcion %></td>
        <td><%= insumo.precio_compra %></td>
        <td><%= insumo.precio_venta %></td>
        <td><%= insumo.stock %></td>
        <td><%= insumo.stock_minimo %></td>
        <td><%= insumo.unidades_medida.descripcion %></td>
        <td><%= insumo.proveedore.empresa %></td>
        <td><%= insumo.tipo_iva.decripcion %></td>
     <td><%= insumo.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= insumo.updated_at.strftime("%d/%m/%Y") %></td>
     <td> <%= link_to edit_insumo_path(insumo), remote: true, class: "btn btn-info" do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %> </td>
     
    
     <td>
      <%= button_to insumo, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
 
</table>
 <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>