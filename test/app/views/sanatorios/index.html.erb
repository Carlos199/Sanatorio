<p id="notice"><%= notice %></p>

<h1>Sanatorios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono1</th>
      <th>Telefono2</th>
      <th>Telefon3</th>
      <th>Pagina</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sanatorios.each do |sanatorio| %>
      <tr>
        <td><%= sanatorio.nombre %></td>
        <td><%= sanatorio.direccion %></td>
        <td><%= sanatorio.telefono1 %></td>
        <td><%= sanatorio.telefono2 %></td>
        <td><%= sanatorio.telefon3 %></td>
        <td><%= sanatorio.pagina %></td>
        <td><%= sanatorio.photo %></td>
        <td><%= link_to 'Show', sanatorio %></td>
        <td><%= link_to 'Edit', edit_sanatorio_path(sanatorio) %></td>
        <td><%= link_to 'Destroy', sanatorio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

